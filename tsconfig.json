    //     //         "./node_modules/cheerio/lib/index.d.ts"
    //     //     ]
    //     // }
    // },
    "include": [
        "src/**/*.ts",
        "infra/**/*.ts",
        "serverless.ts",
        "src/test/lambda.ts",
        "src/test/csv/loader.mjs",
        "src/utils/flowiseUtils.js"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}